{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "domain-entity",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "domain entity name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "projectName":{
      "type": "string",
      "description": "Select a domain project",
      "$default": {
        "$source": "projectName",
        "index": 1
      }
    }
  },
  "required": ["name", "projectName"]
}

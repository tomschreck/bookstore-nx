{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "domain-use-case-command",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "domain use case name for a command. ex: CreateBook",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "dtoName": {
      "type": "string",
      "description": "dto name.  ex: BookDto",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "projectName":{
      "type": "string",
      "description": "Select a domain project",
      "$default": {
        "$source": "projectName",
        "index": 2
      }
    }
  },
  "required": ["name", "dtoName", "projectName"]
}
